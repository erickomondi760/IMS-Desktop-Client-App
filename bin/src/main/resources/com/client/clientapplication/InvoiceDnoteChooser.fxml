<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="invoiceDnoteAnchor" prefHeight="285.0" prefWidth="605.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.clientapplication.InvoiceDnoteChooser">
   <children>
      <AnchorPane fx:id="invoiceDnoteTitleAnchor" layoutX="-2.0" prefHeight="57.0" prefWidth="607.0">
         <children>
            <Label layoutX="14.0" layoutY="15.0" prefHeight="28.0" prefWidth="303.0" text="Create an invoice or a delivery note">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <fx:define>
         <ToggleGroup fx:id="toggle" />
      </fx:define>
      <RadioButton fx:id="deliveryToggle" layoutX="49.0" layoutY="91.0" mnemonicParsing="false" selected="true" text="Delivery note"
      toggleGroup="$toggle">
         <font>
            <Font size="22.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="invoiceToggle" layoutX="49.0" layoutY="186.0" mnemonicParsing="false" text="Invoice" toggleGroup="$toggle">
         <font>
            <Font size="22.0" />
         </font>
      </RadioButton>
      <Separator layoutY="156.0" prefHeight="3.0" prefWidth="605.0" />
      <Button fx:id="chooseButton" graphicTextGap="0.0" layoutX="503.0" layoutY="232.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="88.0" text="Okay">
         <graphic>
            <ImageView fitHeight="29.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/done.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
