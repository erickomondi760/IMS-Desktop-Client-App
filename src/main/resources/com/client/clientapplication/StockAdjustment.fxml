<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="stockAdjustmentAnchor" prefHeight="493.0" prefWidth="400.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.clientapplication.StockAdjustmentController">
   <children>
      <AnchorPane fx:id="adjustmentTitleAnchor" layoutX="-4.0" layoutY="-1.0" prefHeight="53.0" prefWidth="407.0">
         <children>
            <Label layoutX="14.0" layoutY="13.0" text="Stock Adjustment">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="adjustmentDetailsAnchor" layoutX="4.0" layoutY="55.0" prefHeight="435.0" prefWidth="395.0">
         <children>
            <Label fx:id="adjustmentReasonLabel" layoutX="114.0" layoutY="7.0" prefHeight="27.0" prefWidth="157.0" text="Adjustment Reason">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <AnchorPane fx:id="adjustmentReasonAchor" layoutX="29.0" layoutY="34.0" prefHeight="200.0" prefWidth="338.0">
               <children>
                  <fx:define>
                     <ToggleGroup fx:id="toggle" />
                  </fx:define>
                  <RadioButton fx:id="alignment" layoutX="24.0" layoutY="23.0" mnemonicParsing="false" text="Stock alignment">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="toggle" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="damage" layoutX="24.0" layoutY="67.0" mnemonicParsing="false" text="Damage" toggleGroup="$toggle">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="stockTake" layoutX="24.0" layoutY="165.0" mnemonicParsing="false" selected="true" text="StockTake" toggleGroup="$toggle">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="theft" layoutX="24.0" layoutY="119.0" mnemonicParsing="false" text="Theft" toggleGroup="$toggle">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </RadioButton>
               </children>
            </AnchorPane>
            <AnchorPane fx:id="adjustmentQtyAchor" layoutX="29.0" layoutY="273.0" prefHeight="142.0" prefWidth="338.0">
               <children>
                  <TextField fx:id="adjustmentQtyTextField" alignment="CENTER_RIGHT" layoutX="19.0" layoutY="37.0" prefHeight="33.0" prefWidth="310.0">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <Button fx:id="adjustmentButton" layoutX="244.0" layoutY="95.0" mnemonicParsing="false" onAction="#adjustStock" prefHeight="39.0" prefWidth="85.0" text="Save">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Images/approve.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
            <Label fx:id="adjustmentQtyLabel" layoutX="109.0" layoutY="246.0" prefHeight="27.0" prefWidth="168.0" text="Adjustment Quantity">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
